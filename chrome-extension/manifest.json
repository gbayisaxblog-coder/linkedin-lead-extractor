{
  "manifest_version": 3,
  "name": "LinkedIn Lead Extractor",
  "version": "1.0",
  "description": "Extract LinkedIn leads with CEO finding and email validation",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "https://linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://linkedin-lead-extractor-production.up.railway.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://linkedin.com/*", "https://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  }
}