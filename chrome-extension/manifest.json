{
  "manifest_version": 3,
  "name": "LinkedIn Lead Extractor",
  "version": "1.0.0",
  "description": "Extract LinkedIn leads and enrich with CEO data",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://sales.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://sales.linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Lead Extractor"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.html"],
      "matches": ["https://www.linkedin.com/*", "https://sales.linkedin.com/*"]
    }
  ]
}